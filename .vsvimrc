" behave mswin                         " VS runs on MS Windows :)

set tabstop=4                        " tab stop
set softtabstop=4
set shiftwidth=4
set expandtab

set number                           " show line numbers
set relativenumber

set cursorline                       " highlight current line

set incsearch                        " incremental search
set hlsearch                         " highlight searched (and found) text
set ignorecase
set smartcase


" kj exits insert mode
imap kj <ESC>

" KJ also exits insert mode
imap KJ <ESC>

nnoremap <A-a> <C-a>
nnoremap <A-x> <C-x>

" replace current word with yanked text
nnoremap S "_diwP


" ????
nnoremap X diw"0P

" \+L
nnoremap <leader>l :nohlsearch<cr><c-l>
